{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-native",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "built",
    "incremental": true,
    "rootDir": "src",
    "typeRoots": [],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "example"]
}
